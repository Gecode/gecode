  template <class VA, class VB>
  ExecStatus
  SqrPlusBnd<VA,VB>::propagate(Space& home, ModEventDelta) {
    GECODE_ES_CHECK(prop_sqr_plus_bnd(home,x0,x1));
    return x0.assigned() ? ES_SUBSUMED(this,sizeof(*this)) : ES_FIX;
  }

