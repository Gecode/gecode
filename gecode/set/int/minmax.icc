  forceinline
  MaxElement<View>::MaxElement(Space* home, View y0, Gecode::Int::IntView y1)
    : IntSetPropagator<View,PC_SET_ANY,
                       Gecode::Int::PC_INT_BND> (home, y0, y1) {}

