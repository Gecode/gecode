$(SERDLL) $(SERLIB): $(SEROBJ) $(SUPPORTDLL) $(KERNELDLL) $(INTDLL) $(SETDLL) $(CPLTSETDLL) $(MMDLL) $(SCHEDDLL)
	$(CXX) $(DLLFLAGS) $(SEROBJ) \
